<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="0dp"
        android:layout_gravity="top"
        android:src="@drawable/logo"
        android:background="@drawable/bg"
        android:contentDescription="logo" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:background="#e0f7fa"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:useDefaultMargins="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_drive"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:elevation="3dp"
            app:cardCornerRadius="25dp"
            android:layout_margin="16dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/img_drive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_drive"
            android:contentDescription="bg_drive" />
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_av_resources"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:elevation="3dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="25dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/img_av_resources"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_av_resources"
                android:contentDescription="card_homework" />
        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_homework"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:elevation="3dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="25dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/img_homework"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/btn_drive"
        android:contentDescription="card_homework" />
</androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_class_logs"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:elevation="3dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="25dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/img_class_logs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_class_logs"
                android:contentDescription="card_homework" />
        </androidx.cardview.widget.CardView>

</GridLayout>

<Button
        android:id="@+id/websiteOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Open in WebBrowser"
        tools:ignore="HardcodedText" />
</LinearLayout>

</ScrollView>